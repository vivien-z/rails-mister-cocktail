<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
                           url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1586&q=80);">
  <div class="container">
    <h1>The cocktail party</h1>
    <p>Enjoy life when we can</p>
  </div>
</div>

<div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
                                        url('<%= cl_image_path @cocktail.photo.key, crop: :fill %>');
                                        width: 400px;
                                        height: 300px;
                                        background-size: cover;">
        <%= link_to "#{cocktail.name}", cocktail_path(cocktail), class: "card-text" %>
      </div>
    <% end %>
</div>

<%= cl_image_tag("https://res.cloudinary.com/vivienz/image/upload/v1613779537/cocktail/san_francisco_r6ceyw.jpg",
      width: 400, height: 300, crop: :fill) %>
