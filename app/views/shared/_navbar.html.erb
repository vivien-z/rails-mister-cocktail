<div class="navbar navbar-expand-sm navbar-light navbar-lewagon transparent">
  <span>
    <%= link_to "Cocotail Mix", root_path, class: "title" %>
  </span>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "All Cocotails", cocktails_path, class: "nav-link" %>
        </li>
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Add New", new_cocktail_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= link_to cocktails_path, class: "nav-link dropdown", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false do %>
            <i class="fas fa-bars"></i>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Cocotails", user_path(current_user) , class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
